{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Step 1: Prepare Data",
            "type": "debugpy",
            "request": "launch",
            "module": "src.prepare_data",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Step 2: Run Judge (Smoke)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.run_judge",
            "args": ["--smoke"],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Step 2: Run Judge (Full)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.run_judge",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Step 3: Analyze",
            "type": "debugpy",
            "request": "launch",
            "module": "src.analyze",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Smoke Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_smoke.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        }
    ]
}
